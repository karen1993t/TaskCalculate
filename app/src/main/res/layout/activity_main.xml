<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/tv_1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="25dp"
       android:text="@string/first_number"
       android:textSize="32sp"/>
    <EditText
        android:id="@+id/et_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/et_2"
        app:layout_constraintTop_toTopOf="@id/tv_1"
        app:layout_constraintBottom_toBottomOf="@id/tv_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="32sp"
        android:inputType="numberDecimal"
        android:importantForAutofill="no" />
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        android:layout_marginTop="25dp"
        android:text="@string/second_number"
        android:textSize="32sp"/>
    <EditText
        android:id="@+id/et_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_2"
        app:layout_constraintTop_toBottomOf="@id/et_1"
        app:layout_constraintBottom_toBottomOf="@id/tv_2"
        app:layout_constraintTop_toTopOf="@id/tv_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:textSize="32sp"
        android:inputType="numberDecimal"
        android:autofillHints="" />
    <Button
        android:id="@+id/btn_plus"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_2"
        app:layout_constraintTop_toBottomOf="@id/tv_2"
        android:layout_marginTop="15dp"
        android:text="@string/plus"
        android:textStyle="bold"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/btn_minus"
        android:layout_width="96dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/btn_plus"
        app:layout_constraintTop_toTopOf="@id/btn_plus"
        app:layout_constraintBottom_toBottomOf="@id/btn_plus"
        android:layout_marginStart="8dp"
        android:text="@string/minus"
        android:textStyle="bold"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/btn_multi"
        android:layout_width="96dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/btn_minus"
        app:layout_constraintTop_toTopOf="@id/btn_minus"
        app:layout_constraintBottom_toBottomOf="@id/btn_minus"
        android:layout_marginStart="8dp"
        android:text="@string/multiplication"
        android:textStyle="bold"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/btn_div"
        android:layout_width="96dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/btn_multi"
        app:layout_constraintTop_toTopOf="@id/btn_multi"
        app:layout_constraintBottom_toBottomOf="@id/btn_minus"
        android:layout_marginStart="8dp"
        android:text="@string/div"
        android:textStyle="bold"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="@id/btn_plus"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        app:layout_constraintEnd_toEndOf="@id/btn_plus"
        android:layout_marginTop="16dp"
        android:text="@string/result"
        android:textSize="32sp"/>
 <TextView
     android:id="@+id/tv_result"
     android:layout_width="0dp"
     android:layout_height="0dp"
     app:layout_constraintStart_toEndOf="@id/tv_3"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toBottomOf="@id/btn_minus"
     app:layout_constraintTop_toTopOf="@id/tv_3"
     app:layout_constraintBottom_toBottomOf="@id/tv_3"
     android:textSize="32sp"
     android:layout_marginStart="48dp"
     android:paddingStart="45dp"
     tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>